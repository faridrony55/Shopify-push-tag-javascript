<script>
 
    let li = document.querySelector(".step__footer");
  
    let note = document.createElement('div');
  		note.id = "note";
  
    var label = document.createElement('label');
  	label.for = "notebook";
  	label.innerHTML = "I agree to receive recurring automated marketing text messages (e.g. cart reminders) at the phone number provided. Consent is not a condition to purchase. Msg and data rates may apply. Msg frequency varies. Reply HELP for help and STOP to cancel. View our Terms of Service and Privacy Policy.";
  
  	var checkbox = document.createElement('input');
        checkbox.type = "checkbox";
        checkbox.name = "name";
        checkbox.value = "value";
        checkbox.id = "notebook"; 
        checkbox.checked = "checked"; 
  		checkbox.classList.add("input-checkbox");
  
  
      note.append(label);
      note.append(checkbox);
  
        li.before(note);
 
 
</script>

